<div class='mt-4 ms-5'>
  <div class='row gap-3'>
    {{#each courses}}
      <div class='card col-4 col-sm-6 mt-3' style='width: 18rem;'>
        <a href='/course/{{this.slug}}' class='text-decoration-none'>
          <img
            src={{this.image}}
            class='card-img-top object-fit-contain'
            style='max-height: 10rem;'
            alt={{this.name}}
          />
          <div class='card-body'>
            <h5 class='card-title'>{{this.name}}</h5>
            <p class='card-text'>{{this.description}}</p>
            <a href='#' class='btn btn-primary'>Đăng ký khóa học</a>
          </div>
        </a>
      </div>
    {{/each}}
  </div>
</div>