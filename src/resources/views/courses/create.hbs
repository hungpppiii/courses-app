<h2 class='ms-4'>Đăng khóa học</h2>

<form class='row g-3 m-4' method='post' action='/course/store'>
  <div class='col-md-12'>
    <label for='inputName' class='form-label'>Name</label>
    <input
      type='text'
      name='name'
      class='form-control'
      id='inputName'
      placeholder='Nhập tên'
    />
  </div>
  <div class='col-md-12'>
    <label for='inputDescription' class='form-label'>Description</label>
    <input
      type='text'
      name='description'
      class='form-control'
      id='inputDescription'
      placeholder='Nhập thông tin mô tả'
    />
  </div>
  <div class='col-md-12'>
    <label for='inputDescription' class='form-label'>videoId</label>
    <input
      type='text'
      name='videoId'
      class='form-control'
      id='inputDescription'
      placeholder='Nhập videoID'
    />
  </div>
  <div class='col-12'>
    <button type='submit' class='btn btn-primary'>Create</button>
  </div>
</form>