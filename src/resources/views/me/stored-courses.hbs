<div class='mx-4'>
  <table class='table'>
    <thead>
      <tr>
        <th scope='col'>#</th>
        <th scope='col'>Tên khóa học</th>
        <th scope='col'>description</th>
        <th scope='col'>Thời gian tạo</th>
        <th scope='col'></th>
        <th scope='col'></th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <th scope='row'>{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
          <td>{{this.createdAt}}</td>
          <td><a
              href='/course/{{this._id}}/edit'
              class='btn btn-link'
            >Sửa</a></td>
          <td><a
              href='/course/{{this._id}}/delete'
              class='btn btn-link'
            >Xóa</a></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>